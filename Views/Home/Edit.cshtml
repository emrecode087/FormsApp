@model Product
@{
	ViewData["Title"] = "Edit Page";
}

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="hidden" asp-for="Id"/>
	
	<div class="mb-3 form-group">
		<label class="form-label" asp-for="Name"></label>
		<input class="form-control" asp-for="Name" />
	</div>
	<div class="mb-3">
		<label class="form-label" asp-for="Price"></label>
		<input class="form-control" asp-for="Price" />
	</div>
	<div class="mb-3 input-group">
		<input type="file" name="imageFile" id="imageFile" class="form-control" />
	</div>
	<div>
		<img src="~/img/@Model.Image" alt="" style="width : 100px;"/>
		 <input type="hidden" asp-for="@Model.Image"/>
	</div>	
	<div class="form-group mb-3">
		<label class="form-label" asp-for="CategoryId"></label>
		<select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
			<option value="0">All</option>
		</select>
	</div>
	<div class="mb-3 form-check">
		<input type="checkbox" asp-for="isActive" class="form-check-input" />
		<label asp-for="isActive" class="form-check-label"></label>
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</form>