@model Product 
@{
    ViewData["Title"] = "Create Page";
}

<form asp-controller="Home" asp-action="Create" method="post">
    <div class="mb-3 form-group">
		<label class="form-label" asp-for="Name"></label>
		<input class="form-control" asp-for="Name" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Price"></label>
		<input class="form-control" asp-for="Price" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Image"></label>
		<input class="form-control" asp-for="Image" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="CategoryId"></label>
		<select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
			<option value="0">All</option>
		</select>
	</div>
	<div class="mb-3 form-check">
		<input type="checkbox" asp-for="isActive" class="form-check-input" />
		<label asp-for="isActive" class="form-check-label"></label>
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</form>