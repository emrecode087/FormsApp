@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="justify-content-between p-1 card card-body my-3">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-9">
                        <select 
                            name="category" 
                            class="form-select" 
                            asp-items="@(new SelectList(Model.Categories, "categoryId", "categoryName",Model.SelectedCategory))">
                                <option value="0">All</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary mt-1">Filter</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-9">
                        <input value="@ViewBag.searchString" type="search" class="form-check form-control me-2" name="searchString" placeholder="Key word" />
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width:100px">@Html.DisplayNameFor(m => m.Products[0].ProductId)</th>
            <th style="width:100px">@Html.DisplayNameFor(m => m.Products[0].Image)</th>
            <th>@Html.DisplayNameFor(m => m.Products[0].Name)</th>
            <th style="width:100px">@Html.DisplayNameFor(m => m.Products[0].Price)</th>
            <th style="width:130px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>
                    <img src="~/img/@item.Image" class="img-fluid" alt="" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="" class="btn btn-sm btn-primary">Edit</a>
                    <a href="" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
